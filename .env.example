# -----------------------------
# Database Configuration
# -----------------------------
DATABASE_URL=postgresql://user:password@host:5432/database

# Set to 'true' if your database requires SSL (e.g., Neon, AWS RDS)
# Set to 'false' or omit for local/Coolify databases that don't support SSL
# DATABASE_SSL=false

# -----------------------------
# Firebase Authentication (Client-side - VITE_ prefix required)
# Get these from Firebase Console: https://console.firebase.google.com/
# -----------------------------
VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# -----------------------------
# AI Question Generation
# -----------------------------
DEEPSEEK_API_KEY=your-deepseek-api-key

# -----------------------------
# Payment Processing (PesaPal)
# -----------------------------
PESAPAL_CONSUMER_KEY=your-pesapal-consumer-key
PESAPAL_CONSUMER_SECRET=your-pesapal-consumer-secret

# -----------------------------
# Tawk.to Live Chat Widget
# Get this from your Tawk.to Dashboard: https://dashboard.tawk.to/
# Note: This is exposed to the browser (VITE_ prefix), so it's not sensitive
# -----------------------------
VITE_TAWK_PROPERTY_ID=your-tawk-property-id

# -----------------------------
# Session Management
# -----------------------------
SESSION_SECRET=your-random-session-secret-at-least-32-characters

# -----------------------------
# Application URL (for payment callbacks)
# -----------------------------
APP_URL=https://yourdomain.com

# -----------------------------
# Environment
# -----------------------------
NODE_ENV=production

